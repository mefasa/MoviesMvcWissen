@model List<_036_MoviesMvcWissen.Entities.Movie>
@{
    ViewBag.Title = "Movies";
}

@*@Html.Action("Welcome")*@
@{
    Html.RenderAction("Welcome");
}

<h2>@ViewBag.Title</h2>



<label class="text-success">@TempData["Info"]</label>
<br />
<a href="~/Movies/Add">Add Movie</a>
<br />
@*<label>@Model.Count() Movies Found</label>*@
<span>@ViewData["count"] records found</span>
@*<span>@ViewBag.count records found</span>*@
<style>
    #renk {
        background-color: white;
    }

        #renk:hover {
            transition: 0.8s;
            background-color: chocolate;
        }
</style>
<table class="table">
    <tr>
        <td></td>
        <td>
            <b>Name</b>
        </td>
        <td>
            <b>Production Year</b>
        </td>
        <td>
            <b>Box Office Return</b>
        </td>
        <td></td>
    </tr>
    @if (Model != null)
    {
        foreach (var movie in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(" ", "Details", new { id = movie.Id }, new { @class = "fa fa-info text-blue" })
                </td>
                <td class="alert-primary">
                    @movie.Name
                </td>
                <td class="alert-dark">
                    @movie.ProductionYear
                </td>
                <td class="alert-danger">
                    @if (movie.BoxOfficeReturn == null)
                    {
                        <text>--</text>
                    }
                    else
                    {
                        @movie.BoxOfficeReturn
                    }

                </td>
                <td class="btn-outline-primary" id="renk">

                    @Html.ActionLink(" ", "Edit", new { id = movie.Id }, new { @class = "fa fa-pencil-square-o text-success" }) |
                    @Html.ActionLink(" ", "Delete", new { id = movie.Id }, new { @class = "fa fa-trash" })
                </td>
            </tr>
        }
    }


</table>

